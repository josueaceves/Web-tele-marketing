<div class="container contact-div-container">
  <%if current_user.verified == false %>
    <div class="row pull-right">
      <div class="col-lg-12 ">
        <button id="<%=@user.id%>" class="btn btn-warning btn-lg varify-phone-button" data-toggle="modal" data-target="#myModalHorizontal">
        Verifique Su Numero
        </button>
        <!-- Modal -->
        <div class="modal fade" id="myModalHorizontal" tabindex="-1" role="dialog"aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
            <!-- Modal Header -->
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                Ingrese El siguiente Numero:
                </h4>
              </div>
              <!-- Modal Body -->
              <div class="modal-body">
                <div class="form-group">
                  <!-- <h3>Numero: </h3> -->
                  <h2 class="center-text" id="twilio-verification-code"> 5643</h2>
                </div>
              </div>
              <!-- Modal Footer -->
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>


<div class="container">
