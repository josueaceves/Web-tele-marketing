<div class="container">
  <%if current_user.verified == false %>
    <div class="row pull-right">
      <div class="col-lg-12 ">
        <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalHorizontal">
        Verifique Su Numero
        </button>

        <!-- Modal -->
        <div class="modal fade" id="myModalHorizontal" tabindex="-1" role="dialog"aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
            <!-- Modal Header -->
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                Ingrese El siguiente Numero
                </h4>
              </div>
              <!-- Modal Body -->
              <div class="modal-body">
                <div class="form-group">
                  <span>Numero: </span>
                  <span> 5643</span>
                </div>
              </div>
              <!-- Modal Footer -->
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%end%>

  <div class="row">
    <div class="col-lg-12 ">
      <form class="call-form" role="form" action="/calls" method="POST">
        <div class="form-group col-sm-4">
          <input class="form-control col-sm-2" type="text" name="name" id="contact-name" placeholder="Contact Name">
          <input class="form-control col-sm-2" type="text" name="phone" id="phoneNumber" placeholder="Ex: (805) 555-7889">
          <button type="submit" class="btn btn-default">Send Calls</button>
        </div>
      </form>
    </div>
  </div>

</div>

