<div class="row landing-body">
    <div class="col-sm-6 login-div">
      <div class="panel-body">
				<div class="panel-heading clearfix">
					<h1 class="panel-title">Registracion</h1>
          <%if @errors.present?%>
            <ul>
              <%@errors.each do |error|%>
                <li><%=error%></li>
              <%end%>
            </ul>
          <%end%>
					<%= form_for(@user, :html =>{ :role => "form"}) do |f| %>
						<div class="form-group">
							<%= label_tag "Nombre", nil, :class=>"fsr-only" %>
							<%= f.text_field :first_name, placeholder: "Nombre..." ,:class=> "form-control" %>
						</div>

						<div class="form-group">
							<%= label_tag "Apellido", nil, :class=>"fsr-only" %>
							<%= f.text_field :last_name, placeholder: "Apellido..." ,:class=> "form-control" %>
						</div>

						<div class="form-group">
							<%= label_tag "Correo Electronico", nil, :class=>"fsr-only" %>
							<%= f.text_field :email, placeholder: "Email" ,:class=> "form-control" %>
						</div>

						<div class="form-group" style="margin-left: -1em;">
							<%= label_tag "Numero Telephonico", nil, :class=>"fsr-only number-input" %>
							<div class="form-group">
								<div class="col-xs-3">
									<input type="tel" name="phone[area]" class="form-control"  size="3" maxlength="3" required="required" placeholder="XXX" title="Area">
								</div>

								<div class="col-xs-3">
									<input type="tel" name="phone[pre]" class="form-control" size="3" maxlength="3" required="required" placeholder="XXX" title="">
								</div>
								<div class="col-xs-3">
									<input type="tel" name="phone[body]" class="form-control" size="4" maxlength="4" required="required" placeholder="XXXX" title="">
								</div>
							</div>
						</div><br><br>

						<div class="form-group">
							<%= label_tag "ContraseÃ±a", nil, :class=>"fsr-only" %>
							<%= f.password_field :password, placeholder: "********",:class=> "form-control"  %>
						</div>
						<%= f.submit "Registrar", :class => "btn btn-warning"  %>
					<% end %>
	    </div>
	  </div>
  </div>
</div>
