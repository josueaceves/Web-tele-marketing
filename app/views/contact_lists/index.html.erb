

<table class="table">
  <thead>
    <tr>
      <th>Fecha de Lista</th>
      <th>Nombre</th>
      <th>Numero</th>
      <th>Respondio:</th>
      <th>Respuesta</th>
      <th>Duracion De llamada</th>
    </tr>
  </thead>
  <tbody>
    <%@lists.reverse.each do |list|%>
      <% list.contacts.reverse.each do |contact|%>
        <tr>
          <th scope="row"><%=list.created_at.strftime("%d-%b-%y %I:%M%P")%></th>
          <td><%=contact.name%></td>
          <td><%=contact.phone%></td>
          <%if contact.sid.nil?%>
            <td>Desconosido</td>
          <%else%>
            <td><%=answered(@client.calls.get(contact.sid).answered_by,@client.calls.get(contact.sid).status)%></td>
          <%end%>
            <td><%=decode_call_response(contact.response)%></td>
          <%if contact.sid.nil?%>
            <td>Desconosido</td>
          <%else%>
            <td><%= seconds_to_time(@client.calls.get(contact.sid).duration)%></td>
          <%end%>
        </tr>
      <%end%>
    <%end%>
  </tbody>
</table>
